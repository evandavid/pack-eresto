<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" 
    android:orientation="vertical" 
    android:layout_width="fill_parent" 
    android:layout_height="80dp" 
    android:background="@color/transparents"
    android:padding="5dp">
    
    <LinearLayout
        android:id="@+id/line"
        android:layout_width="5dp"
        android:layout_height="fill_parent"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="5dp"
        android:background="#FBAE3A"
        android:orientation="horizontal" />
    
    <RelativeLayout
	    android:orientation="vertical" 
	    android:layout_width="fill_parent"
	    android:id="@+id/box" 
	    android:layout_toRightOf="@+id/line"
	    android:layout_height="80dp" 
	    android:background="#FFF"
	    android:padding="5dp">
	    
	    <LinearLayout
	        android:id="@+id/imageb"
	        android:layout_width="40dp"
	        android:layout_height="40dp"
	        android:layout_alignBottom="@+id/alamat"
	        android:layout_alignParentLeft="true"
	        android:layout_alignParentTop="true"
	        android:background="#ccc"
	        android:padding="1dp" >
		    
		    <ImageView
		        android:id="@+id/image"
		        android:layout_width="fill_parent"
		        android:layout_height="fill_parent"
		        android:background="@drawable/logo2"
		        android:contentDescription="@string/image_horizontal"
		        android:scaleType="centerInside" />
	
		</LinearLayout>
	       
	    <TextView 
	        android:id="@+id/resto_name" 
	        android:layout_width="wrap_content" 
	        android:layout_height="wrap_content" 
	        android:textColor="#E44110"
	        android:paddingLeft="3dp"
	        android:textSize="16sp"
	        android:text="Restaurant name"
	        android:layout_toRightOf="@+id/imageb" /> 
	        
	    <TextView 
	        android:id="@+id/alamat" 
	        android:layout_width="wrap_content" 
	        android:layout_height="wrap_content" 
	        android:textColor="#000"
	        android:paddingLeft="5dp"
	        android:textSize="10sp"
	        android:layout_marginTop="3dp"
	        android:text="Jl. Taman Sari No. 92,Cibeunying, Bandung 40116,Jawa Barat, Indonesia"
	        android:layout_toRightOf="@+id/imageb"
	        android:layout_below="@+id/resto_name" />
    
	 </RelativeLayout>
	
</RelativeLayout> 