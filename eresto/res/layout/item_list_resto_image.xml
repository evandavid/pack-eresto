<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" 
    android:orientation="vertical" 
    android:layout_width="fill_parent" 
    android:layout_height="80dp" 
    android:background="#00000000"
    android:layout_marginRight="5dp"
    android:padding="5dp">
    
    <LinearLayout 
        android:id="@+id/imageb"
        android:layout_width="70dp" 
	    android:layout_height="70dp"
	    android:padding="1dp"
	    android:background="#ccc"
	    android:layout_alignParentTop="true"
	    android:layout_alignParentLeft="true"
	    android:layout_marginRight="3dp">
	    
	    <ImageView 
	        android:id="@+id/image" 
	        android:layout_width="70dp" 
	    	android:layout_height="70dp"
	    	android:contentDescription="@string/image_horizontal"
	    	android:background="@drawable/logo2"
	    	android:scaleType="fitXY"/>
	</LinearLayout>
       
    <TextView 
        android:id="@+id/resto_name" 
        android:layout_width="wrap_content" 
        android:layout_height="wrap_content" 
        android:textColor="@color/yellow"
        android:paddingLeft="3dp"
        android:textSize="16sp"
        android:text="Restaurant name"
        android:layout_toRightOf="@+id/imageb" /> 
        
    <TextView 
        android:id="@+id/alamat" 
        android:layout_width="wrap_content" 
        android:layout_height="wrap_content" 
        android:textColor="#FFF"
        android:paddingLeft="5dp"
        android:textSize="11sp"
        android:layout_marginTop="3dp"
        android:text="Jl. Taman Sari No. 92,Cibeunying, Bandung 40116,Jawa Barat, Indonesia"
        android:layout_toRightOf="@+id/imageb"
        android:layout_below="@+id/resto_name" />
    
	
</RelativeLayout> 